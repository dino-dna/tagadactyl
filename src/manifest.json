{
  "manifest_version": 2,
  "name": "tagadactyl",
  "description": "Tag collaborators instantly in GitHub via @-mentions!",
  "version": "1.1.0",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "350": "icon350.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "*://*.github.com/*"
      ],
      "css": [
        "index.css"
      ],
      "js": [
        "index.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "https://github.com/",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "gear.svg"
  ]
}
